{
  "name": "discord-irc",
  "version": "0.2.0",
  "description": "Connects IRC and Discord channels by sending messages back and forth.",
  "keywords": [
    "discord",
    "irc",
    "gateway",
    "bot",
    "discord-irc",
    "reactiflux"
  ],
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:reactiflux/discord-irc.git"
  },
  "bugs": {
    "url": "https://github.com/reactiflux/discord-irc/issues"
  },
  "scripts": {
    "start": "node index.js",
    "lint": "eslint . --ignore-path .gitignore",
    "coverage": "istanbul cover _mocha $(find test -name '*.test.js') && istanbul report cobertura",
    "test": "npm run lint && npm run coverage"
  },
  "bin": {
    "discord-irc": "./index.js"
  },
  "author": {
    "name": "Martin Ek <mail@ekmartin.no>"
  },
  "license": "MIT",
  "dependencies": {
    "check-env": "~1.2.0",
    "commander": "~2.9.0",
    "irc": "~0.4.0",
    "lodash": "~3.10.1",
    "winston": "~1.1.1",
    "discord.js": "~3.10.1"
  },
  "devDependencies": {
    "chai": "~3.4.0",
    "eslint": "~1.7.3",
    "eslint-config-airbnb": "~0.1.0",
    "istanbul": "~0.4.0",
    "mocha": "~2.3.3",
    "sinon": "~1.17.2",
    "sinon-chai": "~2.8.0"
  }
